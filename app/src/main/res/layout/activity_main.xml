<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    android:orientation="vertical"
    tools:context=".MainActivity" >


    <!---
        폰트 설정: android:fontFamily="@font/"
        따옴표: &quot;
    -->

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:drawableTop="@drawable/mukansang_foreground" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="&quot;default message&quot;"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/pyeongchangbold"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        />

    <Button
        android:id="@+id/viewButton"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        android:drawableLeft="@mipmap/refri_round"
        android:textColor="@color/black"
        android:fontFamily="@font/pyeongchangregular"
        android:text="우리집\n냉장고 보기"
        android:textSize="17dp"
        android:layout_marginBottom="18dp"/>

    <Button
        android:id="@+id/addButton"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        android:drawableLeft="@mipmap/cart_round"
        android:textColor="@color/black"
        android:fontFamily="@font/pyeongchangregular"
        android:text="장 본 내역\n추가하기"
        android:textSize="17dp"
        android:layout_marginBottom="18dp"/>

    <Button
        android:id="@+id/trashButton"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/trash_round"
        android:background="@color/light_yellow"
        android:textColor="@color/black"
        android:fontFamily="@font/pyeongchangregular"
        android:text="버릴 항목\n확인하기"
        android:textSize="17dp"
        android:layout_marginBottom="18dp"/>

    <Button
        android:id="@+id/testDecrease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pyeongchangregular"
        android:text="감소 테스트용" />

    <Button
        android:id="@+id/notiTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pyeongchangregular"
        android:text="알림 테스트용" />


</LinearLayout>